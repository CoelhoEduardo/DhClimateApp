<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.ScreenshotFullActivity">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:elevation="5dp"
            android:src="@drawable/ic_close_black"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="16dp"
            android:elevation="5dp"
            app:fab_addButtonColorNormal="@color/black"
            app:fab_addButtonSize="mini"
            app:fab_expandDirection="up"
            app:fab_labelStyle="@style/custom_floating_buttons">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/secondary_dark"
                app:fab_icon="@drawable/ic_share_black"
                app:fab_size="mini"
                app:fab_title="Compartilhar" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/secondary_dark"
                app:fab_icon="@drawable/ic_delete_black"
                app:fab_size="mini"
                app:fab_title="Excluir" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/secondary_dark"
                app:fab_icon="@drawable/ic_arrow_back_black"
                app:fab_size="mini"
                app:fab_title="Voltar" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>